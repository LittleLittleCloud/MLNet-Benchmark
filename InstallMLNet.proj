<Project InitialTargets="Run" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <Import Project="Shared.props" />

    <Target Name="Run">
        <PropertyGroup>
            <PackageId Condition="$([MSBuild]::IsOSPlatform('Windows'))">microsoft.mlnet-win-x64</PackageId>
            <PackageId Condition="$([MSBuild]::IsOSPlatform('OSX'))">microsoft.mlnet-osx-x64</PackageId>
            <PackageId Condition="$([MSBuild]::IsOSPlatform('Linux'))">microsoft.mlnet-linux-x64</PackageId>
        </PropertyGroup>

        <Message Importance="high" Text = "installing $(PackageId) with version $(MlNetVersion)" />
        <Exec Command="dotnet tool install $(PackageId) --version $(MlNetVersion)" />
    </Target>
</Project>